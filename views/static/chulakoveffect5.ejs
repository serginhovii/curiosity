<script type="text/javascript">
	jQuery(document).ready(function(){
		
		jQuery(".eventLayer").bind("cssClassChanged",function(){
			var intContainer=$(this).parent().parent().parent();
			if($(this).hasClass('selected')){
				
				intContainer.find(".layer1").addClass("display");
				setTimeout(
						(function(s){
							return function(){
								s.find(".chulakovLink1").addClass("chulakovLinkActive1");
									
							};
						})(intContainer)	
						,100);

				setTimeout(
						(function(s){
							return function(){
								s.find(".layer1").addClass("bounceV");
								s.find(".layer1").addClass("backgroundreset");
								
							};
						})(intContainer)	
						,400);
				
			}else {

				intContainer.find(".chulakovLink1").removeClass("chulakovLinkActive1");
				intContainer.find(".layer1").removeClass("backgroundreset");
				intContainer.find(".layer1").removeClass("bounceV");
				setTimeout(
					(function(s){

					return function (){
						s.find(".layer1").removeClass("display");
					};

				})(intContainer)
				,500);
				
			}	
		});

		jQuery(".actionLayer").bind("cssClassChanged",function(){
			var intContainer=$(this).parent().parent().parent();
			if($(this).hasClass('selected')){
				intContainer.find(".layer2").addClass("display");
				setTimeout(
						(function(s){
							return function(){
								s.find(".chulakovLink1").addClass("chulakovLinkActive2");
							};
						})(intContainer)	
						,100);
				setTimeout(
						(function(s){
							return function(){
								s.find(".layer2").addClass("bounceV");
								s.find(".layer2").addClass("backgroundreset");
								
							};
						})(intContainer)	
						,400);
				
			}else {
				intContainer.find(".chulakovLink1").removeClass("chulakovLinkActive2");
				intContainer.find(".layer2").removeClass("backgroundreset");
				intContainer.find(".layer2").removeClass("bounceV");
				setTimeout(
					(function(s){

					return function (){
						s.find(".layer2").removeClass("display");
					};

				})(intContainer)
				,500);
				
			}	
		});

		

	});
</script>


