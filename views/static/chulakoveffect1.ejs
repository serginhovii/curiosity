<style type="text/css">
.content{
	position: relative;
}
.content .layer1,.content .layer2{
	position:absolute;
	opacity: 0;
	width:1214px;
	max-width: none;
	z-index: -1;
	top:0px;
	left:0px;
	transition:all 0.8s ease-in-out;
	transform:scale(2.5);
	display: none;
	padding: 0px;
	
}

.content .chulakovLink1 .display{
	display: block;
}

.show{
	opacity:1;
	
}
