<style type="text/css">
.content{
	position: relative;
}
.content .layer1,.content .layer2{
	position:absolute;
	opacity: 0;
	width:1214px;
	max-width: none;
	z-index: -1;
	top:0px;
	left:0px;
	transition:all 0.8s ease-in-out;
	transform:scale(2.5);
	display: none;
	padding: 0px;
	-webkit-filter: blur(2px);
	 filter: blur(2px);
	
}

.content .chulakovLink1 .display{
	display: block;
}

.show{
	opacity:1;
	
}
.interactionImage img {
    display: block;
    width: 1179px;
    padding: 8px 17px ;
}
.chulakovLink1{
	
	display: block;
	position:relative;
}
.chulakovLinkActive1 img, .chulakovLinkActive2 img{
	 -webkit-filter: blur(2px);
	 filter: blur(2px);
}
.chulakovLinkActive1 img.layer1,.chulakovLinkActive2 img.layer2{
	transform:scale(1);
	opacity: 1;
	z-index:150;
	-webkit-filter: none;
	filter: none;
	box-shadow: 5px 5px 1px #888888;
}
.chulakovLinkActive1,.chulakovLinkActive2 {
	z-index: 150;
	transform:scale(1);
	position:relative;
}

</style>
<script type="text/javascript">
	jQuery(document).ready(function(){
		
		jQuery(".eventLayer").bind("cssClassChanged",function(){

			if($(this).hasClass('selected')){
				$(this).parent().parent().find(".layer1").addClass("display");
				setTimeout(
						(function(s){
							return function(){
								s.parent().parent().find(".chulakovLink1").addClass("chulakovLinkActive1");
							};
						})($(this))	
						,100);
				
			}else {
				$(this).parent().parent().find(".chulakovLink1").removeClass("chulakovLinkActive1");
				setTimeout(
					(function(s){

					return function (){
						s.parent().parent().find(".layer1").removeClass("display");
					};

				})($(this))
				,200);
				
			}	
		});

		jQuery(".actionLayer").bind("cssClassChanged",function(){

			if($(this).hasClass('selected')){
				$(this).parent().parent().find(".layer2").addClass("display");
				setTimeout(
						(function(s){
							return function(){
								s.parent().parent().find(".chulakovLink1").addClass("chulakovLinkActive2");
							};
						})($(this))	
						,100);
				
			}else {
				$(this).parent().parent().find(".chulakovLink1").removeClass("chulakovLinkActive2");
				setTimeout(
					(function(s){

					return function (){
						s.parent().parent().find(".layer2").removeClass("display");
					};

				})($(this))
				,200);
				
			}	
		});

		

	});
</script>


