.chulakovLinkActive1 img.layer1,.chulakovLinkActive2 img.layer2{
	transform:scale(1);
	opacity: 1;
	z-index:150;
	-webkit-filter: none;
	filter: none;
	box-shadow: 5px 5px 1px #888888;
}
.chulakovLinkActive1,.chulakovLinkActive2 {
	z-index: 150;
	transform:scale(1);
	position:relative;
}

</style>
<script type="text/javascript">
	jQuery(document).ready(function(){
		
		jQuery(".eventLayer").bind("cssClassChanged",function(){

			if($(this).hasClass('selected')){
				jQuery(".layer1").addClass("display");
				setTimeout(function(){jQuery(".chulakovLink1").addClass("chulakovLinkActive1");},100);
				
			}else {
				jQuery(".chulakovLink1").removeClass("chulakovLinkActive1");
				setTimeout(function(){jQuery(".layer1").removeClass("display");},100);
				
			}	
		});

		jQuery(".actionLayer").bind("cssClassChanged",function(){

			if($(this).hasClass('selected')){
				jQuery(".layer2").addClass("display");
				setTimeout(function(){jQuery(".chulakovLink1").addClass("chulakovLinkActive2");},100);
				
			}else {
				jQuery(".chulakovLink1").removeClass("chulakovLinkActive2");
				setTimeout(function(){jQuery(".layer2").removeClass("display");},100);
				
			}	
		});

		

	});
</script>
